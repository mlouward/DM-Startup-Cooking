<Window x:Class="WPF_Cooking.Administration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Cooking"
        mc:Ignorable="d" Title="Administration" WindowStartupLocation="CenterScreen"
        Foreground="#FF151A61" Height="600" Width="900" Background="White" FontFamily="Raleway" 
        FontWeight="DemiBold" Icon="Resources/logo.png" MinWidth="500" MinHeight="300"
        FontSize="16">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.6*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*" />
            <RowDefinition Height=".3*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height=".3*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextBlockNomCompte" Margin="5" />
        <TextBlock x:Name="TextBlockCDR" Grid.Row="1" Text="CDR de la semaine : " VerticalAlignment="Center"/>
    </Grid>
</Window>
