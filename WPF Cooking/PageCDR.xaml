<Window x:Class="WPF_Cooking.PageCDR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Cooking"
        mc:Ignorable="d" Title="PageCDR" MinHeight="300" MinWidth="580"
        Height="500" Width="900" FontSize="16"
        WindowStartupLocation="CenterScreen" Foreground="#FF151A61"
        FontFamily="Raleway" FontWeight="DemiBold" Icon="Resources/logo.png">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".4*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Liste de vos recettes :" FontSize="22" VerticalAlignment="Bottom" Margin="5" />
        <ListView x:Name="ListViewRecettes" Grid.Row="1" Grid.RowSpan="2" />
    </Grid>
</Window>